<Window x:Class="VersInformer.Client.NotifyToast"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="notifyToast"
        Title="Release Action From Server" Height="250" Width="300" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid> 
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="175"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Name="lblFrom"
                   VerticalAlignment="Center"
                   Foreground="#333"
                   FontSize="16"
                   Margin="10,0,0,0"
                   >
        </TextBlock>
        <TextBlock 
               Name="lblMessage"
               Text="" 
               Grid.Row="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               TextWrapping="Wrap"
               FontSize="18"
               FontWeight="Bold"
               Foreground="#333333"
               Width="200" Height="150"></TextBlock>
        <Button Content="OK" Grid.Row="2" Width="100" Height="25" Click="Button_Click"></Button>
    </Grid>
</Window>
